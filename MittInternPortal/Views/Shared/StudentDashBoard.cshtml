
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:200,300,400,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/HtmlLayout/css/animate.css">

    <link rel="stylesheet" href="~/Content/HtmlLayout/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/HtmlLayout/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/HtmlLayout/css/magnific-popup.css">

    <link rel="stylesheet" href="~/Content/HtmlLayout/css/aos.css">

    <link rel="stylesheet" href="~/Content/HtmlLayout/css/ionicons.min.css">

    <link rel="stylesheet" href="~/Content/HtmlLayout/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/Content/HtmlLayout/css/jquery.timepicker.css">


    <link rel="stylesheet" href="~/Content/HtmlLayout/css/flaticon.css">
    <link rel="stylesheet" href="~/Content/HtmlLayout/css/icomoon.css">
    <link rel="stylesheet" href="~/Content/HtmlLayout/css/style.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" href="index.html">JobPortal</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Mitt Job Portal", "JobList", "JobPosts", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li class="nav-item cta mr-md-2">@Html.ActionLink("My Application", "Create", "JobPosts")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>

        </div>
    </nav>
    <!-- END nav -->

    <div class="hero-wrap js-fullheight" style="background-image: url('~/Content/HtmlLayout/images/bg_2.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-start" data-scrollax-parent="true">
                <div class="col-xl-10 ftco-animate mb-5 pb-5" data-scrollax=" properties: { translateY: '70%' }">
                    <p class="mb-4 mt-5 pt-5" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">We have <span class="number" data-number="850000">0</span> great job offers you deserve!</p>
                    <h1 class="mb-5" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Your Dream <br><span>Job is Waiting</span></h1>

                    <div class="ftco-search">
                        <div class="row">
                            <div class="col-md-12 nav-link-wrap">
                                <div class="nav nav-pills text-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                                    <button class="nav-link active mr-md-1" id="v-pills-1-tab" data-toggle="pill" href="#v-pills-1" role="tab" aria-controls="v-pills-1" aria-selected="true">
                                        @Html.ActionLink("Find Jobs", "JobList", "JobPosts")
                                    </button>
                                    <button class="nav-link active mr-md-1" id="v-pills-1-tab" data-toggle="pill" href="#v-pills-1" role="tab" aria-controls="v-pills-1" aria-selected="true">
                                        @Html.ActionLink("Find Employers", "StudentList", "JobPosts")
                                    </button>

                                </div>
                            </div>
                          </div> </div>
                </div>
            </div>
        </div>
    </div>





    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <section class="ftco-section ftco-counter img" id="section-counter" style="background-image: url(images/bg_1.jpg);" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="row">
                        <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
                            <div class="block-18 text-center">
                                <div class="text">
                                    <strong class="number" data-number="1350000">0</strong>
                                    <span>Jobs</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
                            <div class="block-18 text-center">
                                <div class="text">
                                    <strong class="number" data-number="40000">0</strong>
                                    <span>Studentss</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
                            <div class="block-18 text-center">
                                <div class="text">
                                    <strong class="number" data-number="30000">0</strong>
                                    <span>Resume</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
                            <div class="block-18 text-center">
                                <div class="text">
                                    <strong class="number" data-number="10500">0</strong>
                                    <span>Employer</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>







    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


    <script src="~/Content/HtmlLayout/js/jquery.min.js"></script>
    <script src="~/Content/HtmlLayout/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/Content/HtmlLayout/js/popper.min.js"></script>
    <script src="~/Content/HtmlLayout/js/bootstrap.min.js"></script>
    <script src="~/Content/HtmlLayout/js/jquery.easing.1.3.js"></script>
    <script src="~/Content/HtmlLayout/js/jquery.waypoints.min.js"></script>
    <script src="~/Content/HtmlLayout/js/jquery.stellar.min.js"></script>
    <script src="~/Content/HtmlLayout/js/owl.carousel.min.js"></script>
    <script src="~/Content/HtmlLayout/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/HtmlLayout/js/aos.js"></script>
    <script src="~/Content/HtmlLayout/js/jquery.animateNumber.min.js"></script>
    <script src="~/Content/HtmlLayout/js/bootstrap-datepicker.js"></script>
    <script src="~/Content/HtmlLayout/js/jquery.timepicker.min.js"></script>
    <script src="~/Content/HtmlLayout/js/scrollax.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
    <script src="~/Content/HtmlLayout/js/google-map.js"></script>
    <script src="~/Content/HtmlLayout/js/main.js"></script>

</body>
</html>
